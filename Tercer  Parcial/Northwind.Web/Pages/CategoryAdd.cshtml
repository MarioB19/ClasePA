@page
@model NorthwindWeb.Pages.AddCategoryModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!-- Registrar categorie -->
<div class="container">
    <h1 class="display-4">Add Category</h1>
    <form method="POST" class="mt-3">
        <div class="form-group">
            <label for="Category_CategoryName">Category Name:</label>
            <input asp-for="Category.CategoryName" class="form-control" placeholder="Enter category name" />
        </div>
        <div class="form-group">
            <label for="Category_Description">Description:</label>
            <input asp-for="Category.Description" class="form-control" placeholder="Enter description" />
        </div>
        <button class="btn btn-success mb-3" type="submit">Add Category</button>
    </form>
</div>

